generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model address_book {
  id         Int       @id @default(autoincrement())
  address    String    @db.VarChar
  name       String
  created_at DateTime? @default(now()) @db.Timestamptz(6)
  updated_at DateTime? @default(now()) @db.Timestamptz(6)
  device_id  String?   @db.VarChar
}

model block {
  name            String @id @db.VarChar
  processed_block Int?
}

model device {
  id         Int      @id @default(autoincrement())
  created_at DateTime @default(now()) @db.Timestamptz(6)
  updated_at DateTime @default(now()) @db.Timestamptz(6)
  pubkey     String   @db.VarChar
  device_id  String   @db.VarChar
}

model normal_wallet {
  id         Int      @id @default(autoincrement())
  created_at DateTime @default(now()) @db.Timestamptz(6)
  updated_at DateTime @default(now()) @db.Timestamptz(6)
  name       String   @db.VarChar
  address    String   @unique @db.VarChar
}

model notifications {
  id         Int      @id @default(autoincrement())
  created_at DateTime @default(now()) @db.Timestamptz(6)
  updated_at DateTime @default(now()) @db.Timestamptz(6)
  user_id    Int
  message    String
  timestamp  DateTime @db.Timestamptz(6)
}

model plugin_managers {
  id           Int      @id @default(autoincrement())
  created_at   DateTime @default(now()) @db.Timestamptz(6)
  updated_at   DateTime @default(now()) @db.Timestamptz(6)
  manager_name String   @db.VarChar
}

model plugins {
  id          Int      @id @default(autoincrement())
  created_at  DateTime @default(now()) @db.Timestamptz(6)
  updated_at  DateTime @default(now()) @db.Timestamptz(6)
  name        String   @db.VarChar
  plugin_type String   @db.VarChar
  version     String   @db.VarChar
  address     String   @db.VarChar
  code_id     Int
  enabled     Boolean
}

model plugins_registration {
  id                    Int      @id @default(autoincrement())
  created_at            DateTime @default(now()) @db.Timestamptz(6)
  updated_at            DateTime @default(now()) @db.Timestamptz(6)
  smart_account_address String   @db.VarChar
  plugin_address        String   @db.VarChar
}

model recovery_account {
  id             Int      @id @default(autoincrement())
  created_at     DateTime @default(now()) @db.Timestamptz(6)
  updated_at     DateTime @default(now()) @db.Timestamptz(6)
  name           String?  @db.VarChar
  wallet_address String   @db.VarChar
  recover_wallet String?  @db.VarChar
}

model smart_wallet {
  id            Int      @id @default(autoincrement())
  created_at    DateTime @default(now()) @db.Timestamptz(6)
  updated_at    DateTime @default(now()) @db.Timestamptz(6)
  name          String?  @db.VarChar
  address       String   @unique @db.VarChar
  contract_info Json
  pubkey        String?  @db.VarChar
}

model BlockCheckpoint {
  id         Int      @id @default(autoincrement())
  created_at DateTime @default(now()) @db.Timestamptz(6)
  updated_at DateTime @default(now()) @updatedAt @db.Timestamptz(6)
  height     Int
  job_name   String   @db.VarChar
}

model fee_grant {
  id         Int      @id @default(autoincrement())
  created_at DateTime @default(now()) @db.Timestamptz(6)
  updated_at DateTime @default(now()) @db.Timestamptz(6)
  granter    String   @db.VarChar
  grantee    String   @db.VarChar
  device_id  String   @db.VarChar
}
